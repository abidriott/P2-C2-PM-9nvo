<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/squareTextView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:background="#6186B3"
        android:gravity="center"
        android:text="Inicio"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/st"
            android:layout_width="380dp"
            android:layout_height="330dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="305dp"
            android:background="#6186B3"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_marginTop="70dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_width="188dp"
            android:layout_height="208dp"
            android:src="@drawable/catuniform" />

        <TextView
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity=""
            android:text="Nombre Alumno:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"

            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/alumno"
            android:textColor="#030A2E"
            android:textSize="24sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity=""
            android:text="Carrera: "
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#FFFFFF" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="24sp"
            android:text="@string/carrera"
            android:textColor="#030A2E"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="10sp"
            android:text="Materia: "
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="24sp"
            android:text="@string/materia"
            android:gravity="center"
            android:textColor="#030A2E"
            />

    </LinearLayout>


</FrameLayout>